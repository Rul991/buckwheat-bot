- const CARD_EMOJI = 'üÉè'

mixin name(name)
    i
        u #{name}

mixin description(description)
    blockquote #{description}

mixin blockParam(emoji, text)
    b #{emoji} #{text} 
    block
    |
    |

mixin param(emoji, text, value)
    +blockParam(emoji, text)
        | #{value}

mixin middle(description, emoji, rarityName)
    |
    |
    +description(description)
    |
    |
    |
    +param(emoji, '–†–µ–¥–∫–æ—Å—Ç—å:', rarityName)
    |

mixin noCard(isBold = true)
    - const text = `${CARD_EMOJI} –ö–∞—Ä—Ç–æ—á–∫–∏ –≤ —É–ø–∞–∫–æ–≤–∫–µ –Ω–µ –æ–∫–∞–∑–∞–ª–æ—Å—å :(`
    if isBold
        b #{text}
    else 
        | #{text}